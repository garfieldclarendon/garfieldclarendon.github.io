          {
            "group": "Success 200",
            "type": "Object[]",
            "optional": false,
            "field": "panels",
            "description": "<p>List of panels.</p>"
          },
          {
            "group": "Success 200",
            "type": "Number",
            "optional": false,
            "field": "panels.address",
            "description": "<p>Index of the module.</p>"
          },
          {
            "group": "Success 200",
            "type": "Number",
            "optional": false,
            "field": "panels.panelID",
            "description": ""
          },
          {
            "group": "Success 200",
            "type": "String",
            "optional": false,
            "field": "panels.panelName",
